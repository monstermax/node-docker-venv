#!/bin/sh

EXEC_NAME=node


if [ "$EXEC_NAME" = "" ]; then
    echo "Error missing EXEC_NAME"
    exit 1
fi

if [ "$VENV_CONTAINER" = "" ]; then
    echo "Error missing VENV_CONTAINER"
    exit 1
fi

exec docker exec -it \
  -w "$PWD" \
  -e NODE_OPTIONS='--inspect' \
  ${VENV_CONTAINER} ${EXEC_NAME} "$@"
